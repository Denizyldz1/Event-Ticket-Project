@model LoginUserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>


    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <a class="text-center" href="index.html"> <h4>Giriş Yap</h4></a>

                                <form class="mt-5 mb-5 login-input" method="post">
                                    <div class="form-group">
                                        <input type="email" class="form-control" placeholder="Email adresinizi giriniz." asp-for="Email">
                                    <span asp-validation-for="Email" class="text-warning"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Şifreniz.." asp-for="Password">
                                    <span asp-validation-for="Password" class="text-warning"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="icheck-primary">
                                                @Html.CheckBoxFor(p=>p.RememberMe)
                                                <label for="remember">
                                                    Beni Hatırla!
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="btn login-form__btn submit w-100">Giriş Yap</button>
                                </form>
                                <p class="mt-5 login-form__footer">Bir Hesabın Yok mu? <a href="/Register/Index" class="text-primary">Kayıt ol</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>








